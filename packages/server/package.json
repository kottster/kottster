{
  "name": "@kottster/server",
  "version": "2.0.5",
  "description": "Instant admin panel for your project",
  "keywords": [
    "admin",
    "panel",
    "dashboard",
    "no-code",
    "low-code",
    "builder",
    "generate",
    "crud"
  ],
  "main": "dist/index.js",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsc",
    "lint": "npx eslint ./lib",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "prepare": "husky",
    "prepare-npm-package": "yarn add @kottster/common@latest && rimraf package-lock.json && npm run update-locks && npm run lint --fix && npm run build",
    "update-locks": "yarn install && synp --source-file yarn.lock"
  },
  "dependencies": {
    "chalk": "4",
    "express": "^5.1.0",
    "jose": "^5.8.0",
    "postgres-array": "^3.0.2",
    "randomstring": "^1.3.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@kottster/common": "^2.0.3",
    "@trpc/server": "^10.45.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.4.2",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "eslint": "^9.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "knex": "^3.1.0",
    "mock-fs": "^5.2.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0",
    "synp": "^1.9.13",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "@kottster/common": "^2.x",
    "vite": "^6.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kottster/kottster.git"
  },
  "bugs": {
    "url": "https://github.com/kottster/kottster/issues"
  },
  "homepage": "https://kottster.app/"
}
